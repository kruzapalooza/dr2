<div class="container">

  <h1>Listing domains</h1>

  <table class="table">
    <thead>
      <tr>
        <th>IANA ID</th>
        <th>Expire Date</th>
        <th>Domain Name</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @domains.each do |domain| %>
        <tr>
          <td><%= domain.iana_id %></td>
          <td><%= domain.expire_date %></td>
          <td><%= domain.domain_name %></td>
          <td><%= domain.created_at %></td>
          <td><%= domain.updated_at %></td>
          <td>
            <%= link_to 'Show', domain %>
            <%= link_to 'Edit', edit_domain_path(domain) %>
            <%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Domain', new_domain_path, class: "btn btn-default" %>

</div>
