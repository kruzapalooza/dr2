<div class="container">

  <h1>Listing contacts</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Org</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.org %></td>
          <td><%= contact.street %></td>
          <td><%= contact.city %></td>
          <td><%= contact.state %></td>
          <td><%= contact.zip %></td>
          <td><%= contact.email %></td>
          <td>
            <%= link_to 'Show', contact %>
            <%= link_to 'Edit', edit_contact_path(contact) %>
            <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Contact', new_contact_path, class: "btn btn-default" %>

</div>